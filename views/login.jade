extends layout

block content
  form#login.form-horizontal(method='post')
    legend Login
    .control-group
      if userNotFound
        .alert.alert-error.fade.in
          strong Ooops.
          |  No such user in the database.
      if incorrectPassword
              .alert.alert-error.fade.in
                strong Sorry.
                |  The password you have entered is incorrect.
      if registrationSuccessful
        .alert.alert-success.fade.in
          strong Congratulations!
          |  Registration has been successful.
      label.control-label(for='userEmail') Email
      .controls
        input#userEmail.input-large(name='userEmail', type='text', placeholder='Email')
    .control-group
      label.control-label(for='password') Password
      .controls
        input#password(name='password', type='password', placeholder='Password')
        span.help-block <a href="#">Forgot your password?</a>
    .control-group
      .controls
        button.btn.btn-large(type='submit') Sign in