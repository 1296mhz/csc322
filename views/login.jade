extends layout

block content
  form#login.form-horizontal(method='post')
    legend Login
    .control-group
      if (message)
        != message
      label.control-label(for='userEmail') Email
      .controls
        input#userEmail(name='userEmail', type='text', placeholder='Email', autofocus='autofocus')
    .control-group
      label.control-label(for='password') Password
      .controls
        input#password(name='password', type='password', placeholder='Password')
    .control-group
      .controls
        button.m-btn.blue(type='submit') Sign in
