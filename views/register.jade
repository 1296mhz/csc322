extends layout

block content
  form#registration.form-horizontal(method='post')
    legend Don't have an account? Register!
    if (message)
      != message
    .control-group
      label.control-label(for='firstName') First Name
      .controls
        input#firstName(name='firstName', type='text', placeholder='First Name')
    .control-group
          label.control-label(for='lastName') Last Name
          .controls
            input#lastName(name='lastName', type='text', placeholder='Last Name')
    hr
    .control-group
      label.control-label(for='userEmail') Email
      .controls
        input#userEmail(name='userEmail', type='text', placeholder='Email')
    .control-group
      label.control-label(for='password') Password
      .controls
        input#password(name='password', type='password', placeholder='Password')
    .control-group
      label.control-label(for='confirm') Confirm Password
      .controls
        input#confirm(name='confirm', type='password', placeholder='Confirm')
    .control-group
      .controls
        button.btn.btn-large(type='submit') Register